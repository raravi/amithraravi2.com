{
  "name": "amith-raravi",
  "version": "2.0.0",
  "private": true,
  "description": "A self starter site",
  "scripts": {
    "test": "bundle exec htmlproofer ./_site --allow-hash-href --check-favicon  --check-html --disable-external",
    "build": "npm run test && bundle exec jekyll build",
    "serve": "npm run test && bundle exec jekyll serve",
    "buildfull": "npm run test && bundle exec jekyll build && npm run webpack && npm run purgecss && bundle exec jekyll build",
    "servefull": "npm run test && bundle exec jekyll build && npm run webpack && npm run purgecss && bundle exec jekyll serve",
    "webpackdev": "webpack --mode development",
    "webpack": "webpack --mode production",
    "purgecss": "purgecss --css _site/css/main.css --content _site/index.html _site/**/index.html _site/**/**/index.html _site/**/**/**/index.html dist/main.js --out dist/"
  },
  "author": "Amith Raravi <amith.raravi@gmail.com>",
  "homepage": "https://www.amithraravi.com/",
  "license": "The MIT License (MIT)",
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "babel-loader": "^8.0.5",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "clean-webpack-plugin": "^2.0.1",
    "grunt": "^1.0.4",
    "grunt-contrib-imagemin": "^3.1.0",
    "grunt-contrib-jshint": "^2.0.0",
    "grunt-contrib-uglify": "^4.0.0",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-file-append": "0.0.7",
    "grunt-newer": "^1.3.0",
    "grunt-svgmin": "^5.0.0",
    "purgecss": "^1.4.0",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0"
  },
  "dependencies": {}
}
